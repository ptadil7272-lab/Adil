<div class="overlay" id="formOverlay">
    <div class="form-box">
        <h2>Order Details</h2>
        <form id="orderForm">
            <label>Product</label>
            <input type="text" id="product" readonly>

            <label>Name</label>
            <input type="text" id="name" placeholder="Enter your name" required>

            <label>Address</label>
            <textarea id="address" placeholder="Enter your address" required></textarea>

            <label>Quantity</label>
            <input type="number" id="quantity" placeholder="Enter quantity" min="1" required>

            <button type="submit">Submit Order</button>
            <button type="button" class="close-btn" onclick="closeForm()">Cancel</button>
        </form>
    </div>
</div>

<script>
    let selectedProduct = '';
    let selectedPrice = 0;

    function openForm(product, price) {
        selectedProduct = product;
        selectedPrice = price;
        document.getElementById("formOverlay").style.display = "flex";
        document.getElementById("product").value = product + " - ‚Çπ" + price;
    }

    function closeForm() {
        document.getElementById("formOverlay").style.display = "none";
        document.getElementById("orderForm").reset();
    }

    document.getElementById("orderForm").addEventListener("submit", function(e) {
        e.preventDefault();

        const name = document.getElementById("name").value.trim();
        const address = document.getElementById("address").value.trim();
        const quantity = document.getElementById("quantity").value.trim();

        const message = `üõç New Fruit Order
-----------------------------
üçâ Product: ${selectedProduct}
üí∞ Price: ‚Çπ${selectedPrice}
üì¶ Quantity: ${quantity}
üë§ Name: ${name}
üè† Address: ${address}`;

        const phoneNumber = "8921096589";
        const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;

        // Send data to WhatsApp (without redirecting user)
        fetch(whatsappURL, {mode: 'no-cors'});

        alert("‚úÖ Your order has been placed successfully!");
        closeForm();
    });
</script>

